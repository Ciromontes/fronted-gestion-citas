#  DOCKERFILE PARA AZURE - FRONTEND + LANDING PAGE
# Multi-stage build optimizado para producci贸n

# ========== STAGE 1: Build del Frontend React ==========
FROM node:18-alpine AS frontend-builder

WORKDIR /app

# Copiar archivos de dependencias
COPY package.json package-lock.json ./

# Instalar dependencias
RUN npm ci --only=production

# Copiar c贸digo fuente
COPY . ./

# Build de producci贸n (genera /app/dist)
ARG VITE_API_URL=/api
ENV VITE_API_URL=$VITE_API_URL
RUN npm run build

# ========== STAGE 2: Preparar Landing Page ==========
FROM alpine:latest AS landing-builder

WORKDIR /landing

# Copiar landing page desde el directorio ../landing-page
COPY ../landing-page ./

# ========== STAGE 3: Nginx con Frontend + Landing ==========
FROM nginx:alpine

# Instalar curl para health checks
RUN apk add --no-cache curl

# Remover configuraci贸n default de nginx
RUN rm /etc/nginx/conf.d/default.conf

# Copiar configuraci贸n de nginx para Azure
COPY nginx.azure.conf /etc/nginx/conf.d/default.conf

# Crear estructura de directorios
RUN mkdir -p /usr/share/nginx/html/app
RUN mkdir -p /usr/share/nginx/html/landing

# Copiar frontend compilado a /app
COPY --from=frontend-builder /app/dist /usr/share/nginx/html/app

# Copiar landing page a /landing
COPY --from=landing-builder /landing /usr/share/nginx/html/landing

# Crear p谩gina de error 404 personalizada
RUN echo '<html><body><h1>404 - P谩gina no encontrada</h1><a href="/">Volver al inicio</a></body></html>' > /usr/share/nginx/html/404.html

# Permisos correctos
RUN chown -R nginx:nginx /usr/share/nginx/html
RUN chmod -R 755 /usr/share/nginx/html

# Exponer puerto
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost/health || exit 1

# Comando de inicio
CMD ["nginx", "-g", "daemon off;"]

